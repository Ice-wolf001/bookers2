<h1>New book</h1>

<%= form_with model: @book, url: '/books', method: :post %>
  <h4>Title</h4>
  <%= f.text_field :title %>
	
  <h4>Opinion</h4>
  <%= f.text_area :body %>
	
  <h4>画像</h4>
  <%= f.file_field :image, accept: "image/*" %>

  <%= f.submit 'submit' %>
<% end %>

<% if @book.errors.any? %>
  <%= @book.errors.count %>error
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>